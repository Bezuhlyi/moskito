<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config SYSTEM "struts-config_1_2.dtd">    
<struts-config>

    <form-beans>
   		<form-bean name="CommentForm"
			type="net.java.dev.moskitodemo.guestbook.presentation.bean.CommentForm"/>
   		<form-bean name="QEParameterForm"
			type="net.java.dev.moskitodemo.usecases.qe.presentation.QEParameterForm"/>
    	
    </form-beans>

    <!-- ========== Global Exception Definitions ============================== -->
    <global-exceptions>
    </global-exceptions>

    <!-- ========== Global Forward Definitions =============================== -->
    <global-forwards type="org.apache.struts.action.ActionForward">
    </global-forwards>



    <!-- ========== Action Mapping Definitions =============================== -->
    <action-mappings type="org.apache.struts.action.ActionMapping">

	    <action path="/gbookShowComments" type="net.java.dev.moskitodemo.guestbook.presentation.action.ShowCommentsAction">
    		<forward name="success" path="/net/java/dev/moskitodemo/guestbook/presentation/jsp/Comments.jsp"/>
    	</action>
	    <action path="/gbookShowComment" type="net.java.dev.moskitodemo.guestbook.presentation.action.ShowCommentAction">
       		<forward name="success" path="/net/java/dev/moskitodemo/guestbook/presentation/jsp/Comment.jsp"/>
    	</action>
	    <action path="/gbookDeleteComment" type="net.java.dev.moskitodemo.guestbook.presentation.action.DeleteCommentAction">
       		<forward name="success" path="/net/java/dev/moskitodemo/guestbook/presentation/jsp/Comments.jsp"/>
    	</action>
	    <action path="/gbookNewComment" type="net.java.dev.moskitodemo.guestbook.presentation.action.NewCommentAction">
       		<forward name="success" path="/net/java/dev/moskitodemo/guestbook/presentation/jsp/NewComment.jsp"/>
    	</action>
   		<action
			path="/gbookCreateComment" name="CommentForm"
            type="net.java.dev.moskitodemo.guestbook.presentation.action.CreateCommentAction"
            input="NewComment.jsp" scope="request">
        		<forward name="success" path="/net/java/dev/moskitodemo/guestbook/presentation/jsp/Message.jsp"/>
    	</action>
    	<action path="/gbookAuthorize" type="net.java.dev.moskitodemo.guestbook.presentation.action.AuthorizeUserAction" scope="request">
	   		<forward name="success" path="/net/java/dev/moskitodemo/guestbook/presentation/jsp/Message.jsp"/>
    	</action>

		<!-- Use case example / quadratic equation -->
   		<action
			path="/solveQE" name="QEParameterForm"
            type="net.java.dev.moskitodemo.usecases.qe.presentation.SolveQEAction"
            input="QE.jsp" scope="request">
        		<forward name="success" path="/net/java/dev/moskitodemo/usecases/qe/presentation/QE.jsp"/>
    	</action>
    	
    	<action path="/fibonacci" type="net.java.dev.moskitodemo.usecases.fibonacci.presentation.action.FibonacciCalculatorAction" scope="request">
 	   		<forward name="success" path="/net/java/dev/moskitodemo/usecases/fibonacci/presentation/jsp/Success.jsp"/>
 	   		<forward name="dialog" path="/net/java/dev/moskitodemo/usecases/fibonacci/presentation/jsp/Dialog.jsp"/>
    	</action>
    	<action path="/thresholdsTR" type="net.java.dev.moskitodemo.threshold.presentation.action.EmulateRequestsAction" scope="request">
 	   		<forward name="success" path="/net/java/dev/moskitodemo/threshold/presentation/jsp/Success.jsp"/>
    	</action>
    	<action path="/thresholdsAVG" type="net.java.dev.moskitodemo.threshold.presentation.action.EmulateAverageRequestsAction" scope="request">
 	   		<forward name="success" path="/net/java/dev/moskitodemo/threshold/presentation/jsp/Success.jsp"/>
    	</action>
    	


    </action-mappings>

</struts-config>
