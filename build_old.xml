<?xml version="1.0"?>

<project name="moskito-demo" default="all" basedir=".">
	
	<property name="output.dir" value="${basedir}/build"/>
	<property name="classes.dir" value="${output.dir}/classes"/>

	<property name="src" value="${basedir}/src"/>
	<property name="bin" value="${basedir}/sh"/>
	<property name="lib" value="${basedir}/lib"/>
	<property name="etc" value="${basedir}/etc"/>
	<property name="html" value="${basedir}/html"/>

	<property name="tld" value="${etc}/tld"/>
	<property name="appdata" value="${etc}/appdata"/>

	
	<property name="dist.dir" value="${basedir}/dist"/>
	<property name="lib.dest" value="${dist.dir}/lib"/>
	
	<property name="target.jar.name" value="moskito-demo.jar"/>


	<property name="webapp.name" value="moskitodemo"/>
	<property name="webapp.tmp.dir" value="${output.dir}/webapp/${webapp.name}"/>
	<property name="webapp.lib" value="${webapp.tmp.dir}/WEB-INF/lib"/>
	<property name="webapp.tld" value="${webapp.tmp.dir}/WEB-INF/tld"/>
	<property name="webapp.classes" value="${webapp.tmp.dir}/WEB-INF/classes"/>

	<property name="test.src" value="test/src"/>
	<property name="test.lib" value="test/lib"/>
	<property name="test.lib.dest" value="${lib.destination}/test"/>

	
	<property name="bin.dest" value="${output.dir}/bin"/>

	<property name="javadoc.dest" value="${basedir}/../javadoc"/>

	<target name="clean">
		<delete dir="${output.dir}"/>
	</target>

	<target name="prepare">
		<mkdir dir="${dist.dir}"/>
		<mkdir dir="${bin.dest}"/>
	    <copy todir="${bin.dest}">
	      <fileset dir="${bin}"/>
	    </copy>
		<mkdir dir="${classes.dir}"/>
	</target>
	
	<target name="compile" depends="prepare">
		<javac destdir="${classes.dir}" srcdir="${src}" debug="on" deprecation="off" optimize="on">
			<classpath>
				<fileset dir="${lib}">
					<include name="**/*.jar"/>
				</fileset>
			</classpath>
		</javac>
	</target>
	
	<target name="jar" depends="compile">
		<jar jarfile="${dist.dir}/${target.jar.name}">
         	<fileset dir="${classes.dir}">
         		<include name="**/*"/>
         	</fileset>
		</jar>
	</target>
	
	<target name="clean.webapp">
		<delete dir="${webapp.tmp.dir}"/>
	</target>
	
	<target name="prepare.webapp">
		<mkdir dir="${webapp.tmp.dir}"/>
		<mkdir dir="${webapp.lib}"/>
		<mkdir dir="${webapp.tld}"/>
		<mkdir dir="${webapp.classes}"/>
		<copy file="${etc}/web.xml" todir="${webapp.tmp.dir}/WEB-INF"/>
		<copy toDir="${webapp.tmp.dir}">
			<fileset dir="${html}">
				<include name="**/*"/>
			</fileset>
		</copy>
		<!-- copy tld's -->
		<copy toDir="${webapp.tld}" flatten="true"> 
			<fileset dir="${tld}">
				<include name="**/*.tld"/>
			</fileset>
		</copy>
		<!-- copy libs -->
		<copy toDir="${webapp.lib}" flatten="true"> 
			<fileset dir="${lib}">
				<include name="**/*.jar"/>
				<exclude name="**/moskito-demo.jar"/>
				<exclude name="**/servlet-api.jar"/>
				<exclude name="**/*-src.jar"/>
				<exclude name="**/moskito-webui-jsps.jar"/>
			</fileset>
		</copy>
		<!-- copy configs and properties -->
		<copy toDir="${webapp.classes}" flatten="true"> 
			<fileset dir="${appdata}">
				<include name="**/*.xml"/>
				<include name="**/*.properties"/>
			</fileset>
		</copy>
		<unjar src="${lib}/moskito-webui-config.jar" dest="${webapp.classes}"/>
	</target>
	
	<target name="jsps.webapp" depends="prepare.webapp">
		<copy toDir="${webapp.tmp.dir}">
			<fileset dir="${src}">
				<include name="**/*.jsp"/>
			</fileset>
		</copy>
		<unjar src="${lib}/moskito-webui-jsps.jar" dest="${webapp.tmp.dir}"/>
	</target>
	
	
	<target name="compile.webapp" depends="prepare.webapp">
		<javac destdir="${webapp.classes}" srcdir="${src}" debug="on" deprecation="off" optimize="on">
			<classpath>
				<fileset dir="${webapp.lib}">
					<include name="**/*.jar"/>
				</fileset>
				<fileset dir="${lib}">
					<include name="**/servlet-api.jar"/>
				</fileset>
			</classpath>
		</javac>
	</target>
	
	<!-- Copy sources of the servlets for direct linking -->
	<target name="src.webapp" depends="prepare.webapp">
		<copy toDir="${webapp.tmp.dir}" flatten="true">
			<fileset dir="${src}">
				<include name="**/*Servlet.java"/>
			</fileset>
		</copy>
	</target>

	<target name="war" depends="compile.webapp,jsps.webapp,src.webapp">
		<war warfile="${dist.dir}/moskitodemo.war" webxml="${webapp.tmp.dir}/WEB-INF/web.xml">
			<fileset dir="${webapp.tmp.dir}"/>
		</war>
	</target>
	
	<target name="webapp" depends="war"/>

	<target name="dist.clean" depends="clean,clean.webapp">
		<delete dir="${dist.dir}"/>
	</target>

	<target name="dist" depends="jar,war">
	    <copy todir="${lib.dest}">
	      <fileset dir="${lib}"/>
	    </copy>
	</target>
	<target name="all" depends="dist"/>
	<target name="javadoc" depends="compile">
		<mkdir dir="${javadoc.dest}/demo"/>
	    <javadoc source="1.5" packagenames="net.java.dev.moskitodemo.*" 
	    	private="true" author="true"
	    	sourcepath="${src}" destdir="${javadoc.dest}/demo" 
	    	bottom="Copyright &#169; 2006 MoSKito Project Team. All Rights Reserved.&lt;br/&gt;&lt;a href=http://moskito.anotheria.net&gt;MoSKito, the open source java monitoring framework"
		>
		<classpath>
	        <fileset dir="lib">
	          <include name="**/*.jar"/>
	        </fileset>
	      </classpath>
	      <tag name="created" scope="all" description="Created: " />
	      <link href="http://java.sun.com/j2se/1.5.0/docs/api"/>
	      <link href="http://struts.apache.org/1.x/struts-core/apidocs/"/>
	      <link href="http://java.sun.com/products/servlet/2.2/javadoc/"/>
	      <link href="http://www.jdom.org/docs/apidocs/"/>
	      <link href="../core"/>
	      <link href="../web"/>
	      <link href="../webui"/>
	    </javadoc>
	</target>

</project>
